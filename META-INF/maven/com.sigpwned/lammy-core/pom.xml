        <artifactId>license-maven-plugin</artifactId>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <excludes>
                  <exclude>com.amazonaws:aws-lambda-java-core</exclude>
                  <exclude>io.github.crac:org-crac</exclude>
                </excludes>
                <includes>
                  <include>io.leangen.geantyref:geantyref</include>
                </includes>
              </artifactSet>
              <relocations>
                <relocation>
                  <pattern>io.leangen.geantyref</pattern>
                  <shadedPattern>com.sigpwned.lammy.thirdparty.io.leangen.geantyref</shadedPattern>
                </relocation>
              </relocations>
              <useDependencyReducedPomInJar>true</useDependencyReducedPomInJar>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
